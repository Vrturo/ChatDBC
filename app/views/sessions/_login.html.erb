<div style="text-align: center">
  <h1> Log In</h1>
  <%= form_for :session, url: sessions_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Log In!"%>
  <% end %>
</div>
